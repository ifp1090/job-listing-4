<% if current_page?('/') %>
  <nav class="navbar navbar-default transparent" role="navigation" id="navbar">
<% else %>
  <nav class="navbar navbar-default black" role="navigation">
<% end %>
  <div class="container">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand" href="/"><img src="http://oggx6lf7f.bkt.clouddn.com/u2k8f.png">NewJob</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to('首页', root_path) %></li>
          <li><%= link_to('工作列表', jobs_path) %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
        <% if !current_user %>
          <li><%= link_to("注册", new_user_registration_path) %></li>
          <li><%= link_to("登入", new_user_session_path) %></li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Hi! <%= current_user.email %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user && current_user.admin? %>
                <li><%= link_to("管理后台", admin_account_jobs_path) %></li>
              <% else %>
                <li><%= link_to("已投递简历的工作", account_jobs_path) %></li>
              <% end %>
              <li><%= link_to("登出", destroy_user_session_path, method: :delete) %></li>
            </ul>
          </li>
        <% end %>
        </ul>
        <%= form_tag search_jobs_path, :method => :get, class: "navbar-form navbar-right" do %>
          <div class="input-group">
            <input type="text" class="form-control" name="q" placeholder="搜索工作关键字..." value="<%= params[:q] %>">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        <% end %>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </div>
</nav>
