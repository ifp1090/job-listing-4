<div class="form-box">
  <%= simple_form_for [:admin, @job]  do |f| %>
    <div class="form-group">
      <%= f.input :title, :label => "标题", input_html: { class: "form-control"}, placeholder: "java工程师 或者 rails工程师..." %>

      <% if @job.category_name? %>
        <%= f.input :category_name, :label => "职位类型", :collection => ["程序员", "产品经理", "设计师", "运营", "市场与销售", "职能", "金融", "其他"], as: :radio_buttons, :checked => @job.category_name %>
      <% else %>
        <%= f.input :category_name, :label => "职位类型", :collection => ["程序员", "产品经理", "设计师", "运营", "市场与销售", "职能", "金融", "其他"], as: :radio_buttons, :checked => "技术" %>
      <% end %>
      

      <%= f.input :description, :label => "描述", input_html: { class: "form-control"} %>

      <%= f.input :wage_lower_bound, :label => '薪水' do %>
         <%= f.input_field :wage_lower_bound, :as => :string, placeholder: '下限' %> K ~
         <%= f.input_field :wage_upper_bound, :as => :string, placeholder: '上限' %> K
      <% end %>

      <%= f.input :contact_email, :label => "联系邮箱", input_html: { class: "form-control"} %>

      <%= f.input :location, :label => "地点", input_html: { class: "form-control"}, placeholder: "北京/上海/广州/深圳..."%>

      <%= f.input :company_name, :label => "公司名称", input_html: { class: "form-control"} %>

      <%= f.input :company_url, :label => "公司网站", input_html: { class: "form-control"}, placeholder: "公司的官方网站" %>

    </div>
    <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
  <% end %>
</div>
